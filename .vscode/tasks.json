{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [{
      "label": "Sass Compile",
      "type": "shell",
      "command": "node-sass --recursive --output css --source-map true --source-map-contents scss",
      "group": "build",
      "problemMatcher": [
        "$node-sass"
      ]
    },
    {
      "type": "gulp",
      "task": "default",
      "problemMatcher": [
        "$gulp-tsc"
      ]
    },
    {
      "type": "gulp",
      "task": "sass",
      "problemMatcher": [
        "$gulp-tsc"
      ]
    }
  ]
}
